<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.brianroper.popularmovies.DetailsFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poster_thumbnail"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/xmen"
        android:elevation="6dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:elevation="2dp"
        android:layout_gravity="left"
        android:layout_marginTop="215dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XMen: Age of Apocalypse"
            android:gravity="center"
            android:paddingTop="10dp"
            android:fontFamily="sans-serif-regular"
            android:textSize="22dp"
            android:id="@+id/movie_title"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Release Data: 04/08/1991"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:id="@+id/release_date"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating:10/10"
            android:padding="5dp"
            android:textSize="17dp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/rating"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plot: Here goes the description for the movie explaining a plot synopsis"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-regular"
            android:padding="5dp"
            android:textSize="15dp"
            android:id="@+id/plot_overview"/>

    </LinearLayout>
</FrameLayout>
